<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tabeldata.android.mqtt.example.MainActivity">

    <Switch
        android:id="@+id/onOffRoom1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Switch" />

    <TextView
        android:id="@+id/labelRoom1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/onOffRoom1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/onOffRoom1"
        android:layout_toStartOf="@+id/onOffRoom1"
        android:text="Ruangan 1"
        android:textAlignment="inherit" />

    <ListView
        android:id="@+id/subcribeRoom1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/labelRoom1" />

</RelativeLayout>
